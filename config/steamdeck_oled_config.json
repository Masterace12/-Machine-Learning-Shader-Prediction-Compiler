{
  "version": "2.0.0-optimized",
  "hardware_profile": "steamdeck_oled",
  "system": {
    "max_memory_mb": 200,
    "max_compilation_threads": 6,
    "enable_async": true,
    "enable_thermal_management": true
  },
  "thermal": {
    "apu_max": 97.0,
    "cpu_max": 87.0,
    "gpu_max": 92.0,
    "prediction_threshold": 82.0
  },
  "ml": {
    "backend": "lightgbm",
    "cache_size": 1000,
    "enable_training": true
  },
  "cache": {
    "hot_cache_size": 100,
    "warm_cache_size": 500,
    "enable_compression": true
  }
}